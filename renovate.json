{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "schedule": [
    "before 6am on Monday"
  ],
  "timezone": "America/Sao_Paulo",
  "labels": [
    "dependencies"
  ],
  "assignees": [
    "kizirianmax"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": false,
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch"
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "dependencies",
        "major-update"
      ],
      "automerge": false
    },
    {
      "matchPackagePatterns": [
        "^@sentry",
        "^posthog"
      ],
      "groupName": "observability packages"
    },
    {
      "matchPackagePatterns": [
        "^react",
        "^react-dom",
        "^react-router"
      ],
      "groupName": "react packages"
    },
    {
      "matchPackagePatterns": [
        "^@stripe",
        "^stripe"
      ],
      "groupName": "stripe packages"
    }
  ],
  "vulnerabilityAlerts": {
    "labels": [
      "security"
    ],
    "assignees": [
      "kizirianmax"
    ]
  },
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2
}

